@import 'variables';

body {
    background-color: base-bg-color;
    &.yellow {
        background-color: rgb(250, 250, 240);
    }
    &.blue {
        background-color: rgb(240, 250, 250);
    }
    &.gray {
        background-color: base-bg-color;
    }
}

.scrollupbar {
    position: absolute;
    top: 0px;
    left: 0px;
    width: 100%;
    border-radius: 0px;
}

.left {
    float: left;
}

.right {
    float: right;
}

.none {
    display: none;
}

.hidden {
    visibility: hidden;
}

.text-center {
    text-align: center;
}

nav {
    background-color: white;
    z-index: 1000;
}
.navbar-embossed .navbar-collapse {
    border-radius: 0px;
    box-shadow: z-depth-2;
}

.main-content {
    margin: 53px auto auto auto;
    padding: 20px 0px 0px 0px;
    width: 75%;
    height: 1000px;
}

.container {
    width: 100%;
    padding: 30px;
    margin: 0px;
    margin-bottom: 20px;
    background-color: white;
    box-shadow: z-depth-1;
    h3 {
        margin: 0px;
        margin-bottom: 20px;
    }
}

.navbar-brand {
    text-align: center;
}

.joined-players {
    padding: 30px;
    .close {
        position:absolute;
        right: 10px;
        top: 10px;
    }
}

.signin {
    padding: 30px;
    div {
        img {
            width: 200px;
            height: 35px;
            margin-bottom: 10px;
        }

        text-align: center;
        padding: 8px;
        margin-bottom:20px;
    }
    div.signin-select {
        background-color: rgb(250 ,250, 250);
        height: 300px;
    }
    button {
        margin-left: 10px;
    }
    .close {
        position:absolute;
        right: 10px;
        top: 10px;
    }
}

.racket {
    padding: 30px;
    div {
        text-align: center;
    }
    img {

        width: 70%;
    }
    button {
        margin-left: 10px;
        width: 80%;
    }
    .close {
        position:absolute;
        right: 10px;
        top: 10px;
    }
}

.tabs {
    a {
        color: #555;
    }
    li.active {
        a, a:focus, a:hover {
            background-color: rgb(248, 248, 248);
            color: #16a085;
        }
    }
}

.home {
}

.ranking {
    background-color: white;
    table {
        width: 100%;
        th {
            padding: 10px;
            text-align: center;
            background-color: rgb(248, 248, 248);
        }
        td {
            padding: 15px;
            border: 1px solid rgb(236, 236 ,236);
            text-align: center;
            &:first-child {
                border-left: none;
            }
            &:last-child {
                border-right: none;
            }
        }
    }
}

.line {
    border-bottom: 1px solid #e67e22;
}

.clickable-text {
    color: rgb(26, 13, 171);
    padding: 0px;
    font-size: inherit;
    cursor: pointer;
}

.tournament-container-wrapper {
    .tournament-container {
        width: 49%;
        display: inline-block;
        background-color: white;
        &.grade-1 {
            background-color: rgb(246, 112, 116);
        }
        &.grade-2 {
            background-color: rgb(243, 199, 89);
        }
        &.grade-3 {
            background-color: rgb(209, 241, 204);
        }
        &.grade-4 {
            background-color: rgb(153, 207, 229);
        }
        box-shadow: z-depth-1;
        padding: 2px;
        .info {
            position:absolute;
            left: 0px;
            top: 0px;
            width: 100%;
            height: 40px;
            background-color: rgba(0, 0, 0, 0.7);
            color: white;
            p {
                margin: 0px;
                padding: 5px;
                span {
                    margin-left: 8px;
                    &.capacity {
                        float: right;
                    }
                    &.grade-1 {
                        color: rgb(246, 112, 116);
                    }
                    &.grade-2 {
                        color: rgb(243, 199, 89);
                    }
                    &.grade-3 {
                        color: rgb(209, 241, 204);
                    }
                    &.grade-4 {
                        color: rgb(153, 207, 229);
                    }
                }
            }
        }
        img {
            width: 100%;
        }
        .content {
            margin-top: 40px;
            width: 100% !important;
            height: 100% !important;
            background-color: rgba(0, 0, 0, 0.7);
            color: white;
            padding: 15px;
            text-align: center;
            p {
                line-height: 1.3;
            }
            .movie {
                float: right;
                font-size: 12px;
                color: rgba(255, 255, 255, 0.8);
                span {
                    color: #3498db;
                }
            }
            .join {
                width: 70%;
            }
        }
    }
}

.join-modal {
    padding: 30px;
    .pair {
        margin: 20px 0px;
        input {
            border: none;
            border-bottom: 1px solid black;
            width: 40%;
            float: right;
        }
        .candidate {
            z-index: 1;
            position: absolute;
            right: 30px;
            margin-top: 5px;
            width: 36%;
            background-color: rgb(250, 250, 250);
            text-align: center;
            p {
                margin: 0px;
                font-size: 14px;
                line-height: 1.5;
                &:hover {
                    background-color: rgb(227, 227, 227);
                }
            }
        }
    }
    .credit {
        margin-bottom: 20px;
        select {
            float: right;
        }
    }
    button {
        width: 70%;
    }
    .close {
        position:absolute;
        right: 10px;
        top: 10px;
    }
}

.facility-tournaments {
    .facility {
        width: 100%;
        display: block;
        margin-bottom: 20px;
        min-height: 500px;
        .info-tournament {
            color: white;
            background-color: rgba(0,0,0,0.7);
            margin-bottom: 0px;
        }
    }
}

.profile {
    background-color: white;
    width: 100%;
    h4 {
        margin-bottom: 0px;
    }
    .profile-wrapper {
        padding: 30px;
        .image {
            img {
                max-width: 80%;
            }
            float: left;
            width: 50%;
        }
        .profile {
            width: 50%;
            float: right;
            margin-top: 6px;
            p {
                border-bottom: 1.5px solid #1abc9c;
                &:last-child {
                    margin-bottom: 0px;
                }
            }
            span {
                float: right;
            }
        }
    }
    .ranking-transition-wrapper {
        clear: both;
        padding: 30px;
        text-align: center;
        canvas {
            width: 100%;
            height: 250px;
        }
    }

}

.record {
    background-color: white;
    width: 100%;
}

.bracket-container {
    margin-top:10px;
}

.brackets {
    .container-brackets {
        position: relative;
        margin-top: 5px;

        .round {
            // z-indexのためのposition: relative
            position: relative;
            z-index: 10;
            width: 150px;
            margin-left: -75px;
            float: left;
            &:first-child {
                margin-left: 0px;
            }
            .match {
                .player {
                    position: relative;
                    vendor('box-sizing', content-box);
                    border: solid 1px black;
                    border-radius: 5px;
                    height: 55px;
                    padding 0px 5px;
                    line-height: 55px;
                    background-color: #46CFB0;
                    // &.hover {
                    //     background-color: #E95546;
                    //     color: white;
                    // }
                    .name {
                        text-align: center;
                        text-decoration: none;
                        width: 100%;
                        color: black;
                        padding: 5px;
                        margin: 0px;
                        line-height: 1;
                    }
                    &.champion {
                        position: relative;
                        left: 130px;
                        margin-bottom: 0px;
                    }
                    &.lose {
                        background-color: rgb(200, 200, 200);
                    }
                    .score {
                        position: absolute;
                        left: 160px;
                        line-height: 0px;
                        padding-top: 15px;
                        &.player-0 {
                            top: 0px;
                        }
                        &.player-1 {
                            bottom: 0px;
                            padding-bottom: 12px;
                        }
                        &.winner {
                            color: red;
                        }
                    }
                }
            }
        }
        .separator-brackets {
            // z-indexのためのposition: relative
            position: relative;
            // .round width の -1/2
            margin-left: -75px;
            width: 160px;
            float: left;
            .line {
                vendor('box-sizing', content-box);
                border: 1px solid black;
                border-left: none;
                border-radius: 0px 5px 5px 0px;
                &.last-line {
                    margin-bottom: 0px !important;
                    height: 0px !important;
                    border-bottom: none;
                    width: 100px;
                }
            }
        }
    }
}

.input-game-result {
    padding: 30px;
    div {
        text-align: center;
        padding: 8px;
        margin-bottom:30px;
        .players {
            margin-bottom: 0px;
            span {
                line-height: 55px;
                margin-right: -4px;
            }
            input {
                width: 30px;
                margin: 10px;
                border: none;
                border-bottom: 1px solid black;
            }
        }
        .player1, .player2 {
            margin: 0px;
            display: inline-block;
            padding: 0px;
        }
        .player {
            vendor('box-sizing', content-box);
            border: solid 1px black;
            border-radius: 5px;
            width: 150px;
            height: 55px;
            padding 0px 5px;
            line-height: 55px;
            background-color: #46CFB0;
            .name {
                text-align: center;
                text-decoration: none;
                width: 100%;
                color: black;
                padding: 5px;
                margin: 0px;
                line-height: 1;
            }
            &.player-0 {
                float: left;
            }
            &.player-1 {
                float: right;
            }
        }
        .input-score {
            clear: both;
        }
    }
    button {
        width: 70%;
    }
    .close {
        position:absolute;
        right: 10px;
        top: 10px;
    }
}

