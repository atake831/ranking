@import 'variables';

body {
    background-color: base-bg-color;
    &.yellow {
        background-color: rgb(250, 250, 240);
    }
    &.blue {
        background-color: rgb(240, 250, 250);
    }
    &.gray {
        background-color: base-bg-color;
    }
}

.scrollupbar {
    position: absolute;
    top: 0px;
    left: 0px;
    width: 100%;
    border-radius: 0px;
}

.left {
    float: left;
}

.right {
    float: right;
}

.none {
    display: none;
}

.hidden {
    visibility: hidden;
}

.text-center {
    text-align: center;
}

nav {
    background-color: white;
    z-index: 1000;
}
.navbar-embossed .navbar-collapse {
    border-radius: 0px;
    box-shadow: z-depth-2;
}

.main-content {
    margin: 53px auto auto auto;
    padding: 20px 0px 0px 0px;
    width: 90%;
    height: 1000px;
}

.container {
    width: 100%;
    padding: 30px;
    margin: 0px;
    background-color: white;
    box-shadow: z-depth-1;
    h3 {
        margin: 0px;
        margin-bottom: 20px;
    }
}

.navbar-brand {
    text-align: center;
}

.signin {
    height: 200px;
    padding: 30px;
    div {
        text-align: center;
        padding: 8px;
        margin-bottom:20px;
    }
    button {
        margin-left: 10px;
    }
    .close {
        position:absolute;
        right: 10px;
        top: 10px;
    }
}

.home {
    a {
        color: #555;
    }
    li.active {
        a, a:focus, a:hover {
            background-color: rgb(248, 248, 248);
            color: #16a085;
        }
    }
}

.ranking {
    background-color: white;
    table {
        width: 100%;
        th {
            padding: 10px;
            text-align: center;
            background-color: rgb(248, 248, 248);
        }
        td {
            padding: 15px;
            border: 1px solid rgb(236, 236 ,236);
            text-align: center;
            &:first-child {
                border-left: none;
            }
            &:last-child {
                border-right: none;
            }
        }
    }
}

.bracket-container {
    margin-top:10px;
}

.brackets {
    .container-brackets {
        position: relative;
        margin-top: 5px;

        .round {
            // z-indexのためのposition: relative
            position: relative;
            z-index: 10;
            width: 150px;
            margin-left: -75px;
            float: left;
            &:first-child {
                margin-left: 0px;
            }
            .match {
                .player {
                    vendor('box-sizing', content-box);
                    border: solid 1px black;
                    border-radius: 5px;
                    height: 23px;
                    padding 0px 5px;
                    line-height: 23px;
                    background-color: #46CFB0;
                    &.hover {
                        background-color: #E95546;
                        color: white;
                    }
                    .name {
                        text-align: center;
                        text-decoration: none;
                        cursor: pointer;
                        width: 100%;
                        margin-left: 10px;
                        color: black;
                    }
                    &.champion {
                        position: relative;
                        left: 130px;
                        margin-bottom: 0px;
                    }
                }
            }
        }
        .separator-brackets {
            // z-indexのためのposition: relative
            position: relative;
            // .round width の -1/2
            margin-left: -75px;
            width: 180px;
            float: left;
            .line {
                vendor('box-sizing', content-box);
                border: 1px solid black;
                border-left: none;
                border-radius: 0px 5px 5px 0px;
                &.last-line {
                    margin-bottom: 0px !important;
                    height: 0px !important;
                    border-bottom: none;
                    width: 100px;
                }
            }
        }
    }
}


